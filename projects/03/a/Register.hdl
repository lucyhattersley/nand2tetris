/**
 * 16-bit register:
 * If load[t] == 1 then out[t+1] = in[t]
 * else out does not change
 */

CHIP Register {
    IN in[16], load;
    OUT out[16];

    PARTS:
    // Put your code here:
    DFF(in=muxOut[16], out=DFFOut[16], out=out[16]);
    Mux16(a=DFFOut[16], b=in[16], sel=load, out=muxOut[16]);
}
